                </FrameLayout>

                <FrameLayout
                    android:layout_width="79dp"
                    android:layout_height="79dp"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/imgTeam3"
                        android:layout_width="79dp"
