<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <LinearLayout
        android:id="@+id/lytDialog"
        android:layout_width="373dp"
        android:layout_height="381dp"
        android:background="@color/dialogBG"
        android:backgroundTintMode="screen"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/cinzel"
            android:text="Change Something"
            android:textAlignment="center"
            android:textColor="@color/golden_light"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/inputField1"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Field 1"
            android:inputType="text" />

        <EditText
            android:id="@+id/inputField2"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Field 2"
            android:inputType="text" />

        <EditText
            android:id="@+id/inputField3"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Field 3"
            android:inputType="text"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lytButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="Cancel" />

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:text="Confirm" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>